<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:id="@+id/txt_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:layout_marginTop="150dp"
        android:layout_marginStart="70dp"/>

    <EditText
        android:id="@+id/et_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/enter_the_height_cm"
        android:background="@android:color/white"
        android:layout_marginTop="150dp"
        android:padding="5dp"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/txt_height"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/txt_weight"
        android:layout_below="@+id/txt_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:layout_marginStart="70dp"/>

    <EditText
        android:id="@+id/et_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_height"
        android:hint="@string/enter_the_weight_kg"
        android:background="@android:color/white"
        android:padding="5dp"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/txt_weight"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/btn_Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_weight"
        android:text="@string/submit"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_orange_light"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_Submit"
        android:layout_marginTop="50dp"
        android:text=""
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>

</RelativeLayout>